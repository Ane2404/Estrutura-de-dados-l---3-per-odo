#include <stdio.h>

void troca (int *a, int *b){
	int temp;
	temp = *a;
	*a = *b;
	*b = temp;
	printf("função - valor de a:%d  valor de b:%d \n",*a,*b);
}
int main(){
	int x, y;
	printf ("Entre com dois valores: ");
	scanf("%d%d",&x,&y);
	printf("1 - valor de x:%d  valor de y:%d \n",x,y); //até aqui, apenas definimos e mostramos as variáveis e seus valores.
	troca(&x,&y);// aqui estamos passando os endereços originais e não um xeroz
	printf("2 - valor de x:%d  valor de y:%d \n",x,y);
	return 0;
}
